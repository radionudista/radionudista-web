# Environment Configuration Example
# Copy this file to .env, .env.development, or .env.feature and configure for your environment

# Application Environment - Controls which environment the app is running in
# Options: production, local, feature
VITE_APP_ENVIRONMENT=local

# Debug Mode - Enables/disables console logging
# Options: true, false
VITE_APP_DEBUG=true

# Launch Date - The date when the countdown should end and switch to Twitch player
# Format: ISO 8601 datetime string with timezone
VITE_LAUNCHING_DATE=2025-08-09T12:00:00-03:00

# Twitch Source URL - The iframe source URL for the Twitch player
# Should include all necessary parent domains for embedding
VITE_TWITCH_SRC_URL=https://player.twitch.tv/?channel=radionudista&parent=radionudista.com&parent=localhost&parent=127.0.0.1&parent=radionudista-aurora-glass.pages.dev&parent=lovable.dev&autoplay=true&muted=false

# Stream URL - Direct link to the Twitch stream (for fallback and external links)
VITE_STREAM_URL=https://twitch.tv/radionudista

# Twitch Player Window Size - Percentage of browser canvas the player should occupy
# Range: 1-100 (integer) - maintains 16:9 aspect ratio
# 20 = 20% of available space, 70 = 70% of available space
VITE_TWITCH_PLAYER_WINDOW_SIZE_PERCENT=70
